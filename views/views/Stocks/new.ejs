<form action="/Stocks/create" method= "POST">
  <h2>Create a Stock Portfolio for <%= customer.name %></h2>
  <input type="hidden" name="owner" value="<%- customer.id%>" />
  <input type="text" placeholder="Symbol" name="Symbol" ><br />
  <input type="text" placeholder="Name" name="Name" ><br />
  <input type="number" placeholder="Share Amount" name="Share_amount" /> <br />
  <input type="number" placeholder="Purchase Price" name="price" /> <br />
  <input type="number" placeholder="Date of Purchase" name="Date_of_purchase" /> <br />

  <input type="submit" value="Create New Stock Portfolio" /> <br />
</form>
